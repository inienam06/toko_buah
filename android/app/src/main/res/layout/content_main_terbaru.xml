<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llContent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription"
            android:scaleType="fitXY"
            android:id="@+id/ivProductImage"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nama_produk"
                android:id="@+id/tvProductName"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvProductName"
                android:text="@string/nol"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:id="@+id/tvProductPrice"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nol"
                android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
                android:drawableTint="@color/colorSecondary"
                android:gravity="center_vertical"
                android:layout_below="@id/tvProductPrice"
                android:textSize="13sp"
                android:textColor="@color/colorSecondary"
                android:textAlignment="textEnd"
                android:id="@+id/tvProductView"
                tools:ignore="RtlCompat,RtlHardcoded,UnusedAttribute"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>